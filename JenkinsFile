pipeline{
    agent any
    triggers {
    // weekly schedule. Runs once every week (Sunday at a hashed hour)
    cron('H H * * 0')
    }
    stages{
        stage('Build'){
            steps{
                echo 'Building...'
                git branch: 'main', url: 'https://github.com/shivamsathya/IIHT'
            }
        }
        stage('Testing'){
            steps{
                echo 'Testing...'
                bat 'my_script.bat'
            }
        }
        stage('Deploy'){
            steps{
                echo 'Deploying...'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'Successful Run!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}